//- STYLING PURPOSES ONLY		
mixin skill_card_dis(s)
	.card.disabled
		.body.disabled
			.overall.box.disabled
				.value.disabled= s.overall
				.label.disabled overall
				//-.disabled .glass o
			.faux-stats.box.disabled
				.xp.box.disabled
					.value.disabled= s.experience
					.label.disabled experience
				.outlook.box.disabled
					.value.disabled= s.outlook
					.label.disabled outlook
			.rating.box.disabled
				.value.disabled #{s.love} stars
			.title.box.disabled
				.value.disabled= s.title
			.since.box.disabled
				.label.disabled since
				.value.disabled= s.since
			.see-all.box.disabled
				.label.disabled See all #{s.projects.length} projects
			.timeline.box.disabled 
				.label.disabled Timeline
			.projects.box.disabled
				each project, index in s.projects
					+project_mini_dis(project, index+1)
			
