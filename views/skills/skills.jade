extends ../layout.jade

include ../std/std-ui.jade

block stylesheet
	include ../../public/stylesheets/skills.css

//- block nav 
	//- +navButton('/skills', 'Skills')
	block nav_skills

block page
	block skill_page

//- Specialized Views
mixin skill_tag(skill)
	//- - skill.url = "/skills/"+skill.id;
	- var col = skill.color || "#666";
	- var bg = "background: "+col+" !important;";
	- var text = "color: "+col+" !important;";
	a.skill-tag(style="#{bg}", href="#{skill.localURL}")
		.value= skill.title