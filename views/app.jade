//- Skills
mixin Skill(skill)
	li.skill= skill

mixin SkillsList(skills)
	if skills
		ul.skills
			each s in skills
				+Skill(s)

mixin SkillsContainer(title, skills)
	.skills-container
		h3= title
		+SkillsList(skills)
		
//- Projects
mixin Project(proj)
	li.project
		figure
			if proj.imageURLs
				each url in proj.imageURLs
					img(src="#{url}" alt="#{proj.title}")
		.title
			header
				h3= proj.title
				.subtitle= proj.type
			+SkillsList(proj.skills)
			p= proj.description
			//- if (proj.launchURL)
			//- 	a(href="#{proj.launchURL}").button Launch
			//- if (proj.githubURL)
