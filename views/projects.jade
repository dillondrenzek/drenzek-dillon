mixin project_mini(p, num, bg, text)
	.proj.box 
		.number.box
			.value= (num < 10) ? "0"+num : num
		.title.box(style="#{bg}")
			.value= p.title
		.time.box
			.value(style="#{text}")= p.time
		.subtitle.box(style="#{bg}")
			.value= p.subtitle

//- styling only
mixin project_mini_dis(p, num)
	.proj.box.disabled 
		.number.box.disabled
			.value.disabled= (num < 10) ? "0"+num : num
		.title.box.disabled
			.value.disabled= p.title
		.time.box.disabled
			.value.disabled= p.time
		.subtitle.box.disabled
			.value.disabled= p.subtitle

