extends app

mixin Skill(title, value)
	li.skill
		.title= title
		.value= value

mixin Project(proj)
	li.project 
		figure
			each url in proj.imageURLs
				img(src="#{url}" alt="#{proj.title}")
		.title
			h3= proj.title
			.descriptors= proj.descriptors
			ul.points
				each p in proj.points
					li.point= p

block title
	| Dillon Drenzek, The Work of

block angularApp
	script(src="/js/angularApp.js")

block link
	link(rel="stylesheet" href="/css/the-work-of.css")

block head
	base(href="/the-work-of/")

