extends app

mixin Project(proj)
	li.project 
		figure
			each url in proj.imageURLs
				img(src="#{url}" alt="#{proj.title}")
		.title
			h3= proj.title
			.descriptors= proj.descriptors
			ul.points
				each p in proj.points
					li.point= p

block title
	| The Work of | Dillon Drenzek


block page
	.page
		.page-header
			h2 , The Work of
		.page-body
			ul
				each proj in projects
					+Project(proj)
				//- +Project()
				//- +Project()
				//- +Project()
				//- +Project()
		//- .page-footer
	//- .page
	//- 	h1 , The Work of
	//- .page

//- block header
	h2 The Work Of
	//- .subtitle Projects

//- block left
	//- p Aside

//- block right
	if projects.length > 0
		ul.projects
			each p in projects
				li.project
					.title
						h3= p.title
					if p.imageURLs
						figure
							each url in p.imageURLs
								img(src="#{url}" alt="#{p.title}")

					.detail
						
						if p.descriptors
							.descriptors
								span.brackets [
								span
									each des in p.descriptors
										|  #{des}, 
								span.brackets ]
						if p.points
							ul.points
								each point in p.points
									li.point
										| - 
										| #{point}