//- version 0.4.0
extends ./projects.jade

block projects_page
	- var col = obj.color || "#666";
	- var bg = "background: "+col+" !important;";
	- var text = "color: "+col+" !important;";
	- obj.skills = [{}, {}, {}];

	.main-page
		section.title
			header
				h2= obj.title
				+action("Edit", "/projects/edit/"+obj.id, "GET")
				.detail
					.label 
						| Project
					+project_tag({title: obj.type, color: col})

		section.subtitle
			.date.box
				.value.large 23 Feb 15
				.label date

		section.description
			h3 Description
			p= obj.description

		section.skills
			h3 Skills
			each s in obj.skills
				.label Skill
				.value Photoshop
