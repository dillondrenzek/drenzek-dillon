// FIRA SANS
// version 1.0.0

@font-face 
	font-family 'Fira Sans'
	font-weight 700
	src 	url("../../fonts/FiraSans-Bold.woff") format('woff'),
			url("../../fonts/FiraSans-Bold.ttf") format('truetype')

@font-face 
	font-family 'Fira Sans'
	font-weight 200
	src 	url("../../fonts/FiraSans-Light.woff") format('woff'),
			url("../../fonts/FiraSans-Light.ttf") format('truetype')
			
@font-face 
	font-family 'Fira Sans'
	font-weight 400
	src 	url("../../fonts/FiraSans-Regular.woff") format('woff'),
			url("../../fonts/FiraSans-Regular.ttf") format('truetype')

FiraSans-3($size, $weight, $color) 
	font-family 'Fira Sans', Helvetica, sans-serif
	font-size $size
	font-weight $weight
	color $color

FiraSans-5($size, $weight, $color, $spacing, $align) 
	font-family 'Fira Sans', Helvetica, sans-serif
	font-size $size
	font-weight $weight
	color $color
	letter-spacing $spacing
	text-align $align



// COLORS
$white-3 = #fafafa
$white-2 = #eeeeee
$white-1 = #d8d8d8
$white-0 = #bcbcbc
$gray-3 = #ababab
$gray-2 = #979797
$gray-1 = #888686
$gray-0 = #666666
$black-3 = #575452
$black-2 = #3D3C3C
$black-1 = #353434
$black-0 = #171413

// Resume Color Palette
