// Base.styl
// version 0.9.0
// - Base (usually visible) UI Elements

	
html
	FiraSans-5(16px, 500, $black-2, -1px, left)

li
	list-style-type none

h2
	FiraSans-5(4em, 700, Black, -3px, left)


					
// Main Page 
// - wrapper for the entire site (can be the 960px floating wrapper as well)
.main-page
	position absolute
	top 0
	left 0
	width 100%
	background white2
	
// Navigation
nav
	width 100%
	position relative
	background Black
	border-bottom black0 1px solid

	ul 
		li
			display inline

	a
		padding 5px 20px
		FiraSans-5(1rem, 700, White, 1px, left)
		text-decoration none
		text-transform lowercase
		vertical-align middle
		
		
	a:hover
		color Red
		
	.home
		background Red
		color White
		padding 5px
		
		&:hover
			background White
			color Red
	.admin
		float right
		
