// Base.styl
// version 0.9.0
// - Base (usually visible) UI Elements


	
html
	FiraSans-5(16px, 500, $black-2, -1px, left)






					
// Main Page 
// - wrapper for the entire site (can be the 960px floating wrapper as well)
.main-page
	position absolute
	top 0
	left 0
	width 100%
	background white2
	
// Navigation
nav
	width 100%
	// height 60px
	// padding 10px 20px
	position relative
	ul 
		
		li
			// float left
			list-style-type none

	a
		// padding 5px 20px
		border-radius 5px
		border 2px Black solid
		FiraSans-5(1rem, 700, $gray-3, 0px, left)
		text-decoration none
		text-transform uppercase
		color Red
		background White
		
	a:hover
		color Red
		
	.home
		background Black
		color White
		border 1px Red solid
		
