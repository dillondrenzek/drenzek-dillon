//- Models style
//- Styling for all representations of models (Skills, Projects) outside their homepages
//- v1.4.3

//- Projects

//- Large Project
li.project-L
	position relative
	list-style-type none
	border-bottom 1px gray3 solid
	width 60%
	height 100px
	&:first-child
		border-top 1px gray3 solid
		
	// 1st Level children
	&>*
		display inline-block
		// position relative
		
		// width 100%
	
	// Title		
	.title
		// position relative
		position absolute
		// height 100px
		top 0
		left 20%
		// right 0
		// z-index 5
		// width 80%
		padding 10px 20px

		h3
			position relative
			width 100%
			FiraSans-5(36px, 400, Black, -1px, left)
			
		ul.skills
			width 100%
			position relative
			&>*
				display inline-block
			.label
				FiraSans-5(12px, 400, gray3, 2px, left)
				margin-right 10px
			li
				list-style-type none
		
	// Image		
	.image	
		background Black
		position relative
		overflow hidden
		width 20%
		height 100px
		z-index 0

		img
			// width 100%
			height 100px

				
	
				
