// Media Query Thresholds
SmallThreshold = 768px
MediumThreshold = 992px
LargeThreshold = 1200px

.container-fluid
  margin-right auto
  margin-left auto
  
// Fixed Width Alternative container
.container 
  padding-right 15px
  padding-left 15px
  margin-right auto
  margin-left auto
  
@media (max-width 767px)
  .container
    width 100%

@media (min-width SmallThreshold)
  .container 
    width 750px
  

@media (min-width MediumThreshold)
  .container 
    width 970px
  

@media (min-width LargeThreshold)
  .container 
    width 1170px

// Block Mixins

XS()
  @media (max-width 767px)
    {block}

SM()
  @media (min-width SmallThreshold)
    {block}

MD()
  @media (min-width MediumThreshold)
    {block}

LG()
  @media (min-width LargeThreshold)
    {block}






