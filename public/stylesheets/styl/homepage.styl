// Homepage Style
// v3.0.0

@import 'base'
	
.links
	Offset-XS(1)
	top 165px
	
	a
		padding 15px
		display block
		color White
		margin-bottom 50px
		border-left 5px solid transparent
		text-shadow 1px 1px 5px Black
		&:hover
			text-decoration none
			background rgba(black,0.2)
			border-left 5px solid White


		.title
			FiraSans(3rem, 700, White, -0.05em, left)
			line-height 3rem
		.comment
			margin-left 25px
			Width-XS(9)
			PersonalQuote(1rem, 200, White, -0.025em, left)
			


