//--------------------
// Image Detail Modal
// version 2.2.3
//--------------------

ModalButton(ht, wd)
	position absolute
	z-index 101
	height ht
	width wd
	background rgba(Black, 0.6)
	color rgba(White, 0.6)
	cursor pointer
	line-height ht
	text-align center
	&:hover
		background rgba(Black,0.9)
		color rgba(White, 1.0)
		text-decoration none
ModalButton()
	position absolute
	z-index 101
	height 60px
	width 60px
	background rgba(Red, 0.6)
	color rgba(White, 0.6)
	cursor pointer
	line-height 60px
	text-align center
	font-size 1.25em
	&:hover
		background rgba(Black,0.9)
		color rgba(White, 1.0)
		text-decoration none
	&:active
		background rgba(Red,0.9)
		


#modal
	display block
	position fixed
	Width-XS(12)
	height 100vh
	top 0
	left 0
	background rgba(Black,0.9)
	z-index 100
	text-align center
		
	figure
		Width-XS(8)
		height 80%
		position relative
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		margin 0 auto
		text-align center
		overflow hidden
		
		// .slider
		// 	position relative
		// 	top 0
		// 	left 0
		// 	display block
		// 	height 100%
			
		.slide
			Width-XS(12)
			height 100%
			position absolute
