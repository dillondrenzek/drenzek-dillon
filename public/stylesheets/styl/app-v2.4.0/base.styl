.logo
	// Width-XS(2)
	// Offset-XS(2)
	// width 4.1666667em
	// height 4.1666667em
	height 266px
	width 200px
	background Red
	position absolute
	text-align left
	font-size 48px

	h1
		font-size 1em // Standard 48px
		line-height 0.83333em
		position absolute
		left 0.270833em
		bottom 0.6666667em
		text-align left
	.subtitle
		font-size 0.25em // Standard 12px
		position absolute
		left 1.25em
		bottom 1.25em
		color LtRed
		text-transform uppercase
		letter-spacing .1em
		text-align left

.page-header
	background transparent
	position relative
	padding 25px 30px
	margin-bottom 30px
	border-bottom 1px solid Light
	h2
		font-size 3rem

.project
	// border-top 1px solid Light
	background Light
	margin-bottom 20px
	padding 0 30px
	// margin 0 15px
	margin-bottom 20px
	Width-SM(12)
	
	ul
		list-style-type none

	&>*
		display inline-block
		vertical-align middle
	
	.title
		// background White
		// padding 12px 20px
		margin 15px 0
		Width-SM(8)
		h3
			FiraSans-5(1.125rem, 700, Black, -0.06em, left)
	.descriptors
		FiraSans-5(0.85rem, 700, Red, 0.1em, left)
		text-transform uppercase
		
		.brackets
			color Gray
			font-weight 400

	.points
		FiraSans-5(0.85rem, 500, Dark, 0.1em, left)
		// color Black
		// letter-spacing .1em
		text-transform uppercase
		.point
			margin-top 10px
		// margin-bottom 10px


	//--------------
	// Image Slider
	//--------------
	figure
		Width-SM(4)
		background Black
		overflow hidden
		height 100%
		position relative
		z-index 10
		cursor pointer
		
		img
			display block
			margin 0 auto
			&:not(a)
				:not(:first-child)
					display none
		// img:first-child:not(a)
		// 	display block !important
	
		&:hover a.image
			opacity 1
		
		a.image
			opacity 0
			position absolute
			bottom 0
			text-align center
			width 100%
			background rgba(Red,0.7)
			padding 10px
			color White
			&:hover
				text-decoration none


		&:hover .navigation
			opacity 1


.page
	margin-top 36px




