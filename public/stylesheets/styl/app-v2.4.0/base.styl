//------------------
// App-wide Styling
// version 2.2.4
//------------------
*,
*:before,
*:after
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	margin 0
	padding 0
	
html
	background White
	FiraSans-5(16px, 500, Black, -1px, left)

h1
	FiraSans-5(3rem, 700, White, -0.05em, center)	
	line-height 3rem

h2
	FiraSans-5(2.25rem, 700, Black, -0.05em, left)
	line-height 2.25rem
	
h3
	FiraSans-5(1.75rem, 400, Black, 0em, left)
	line-height 1.5rem

h4
	FiraSans-5(1.25rem, 200, Gray, 0em, left)
		
p
	FiraSans-5(1rem, 200, Black, 0.03125em, justify)
	
a
	color Red
	font-weight 400
	text-decoration none
	&:hover,
	&:active
		text-decoration underline
	&:active
		color Dark
		
img
	height auto
	width auto
	&.landscape
		height auto
		width 100%
	&.portrait
		height 100%
		width auto


.container
	
	&>*
		display inline-block
		vertical-align top
		position relative
	aside
		
		// position relative
		Width-XS(3)
		Width-SM(3)
		// float left
	.page
		// display inline-block
		Width-XS(9)
		Width-SM(9)
		// left 33%
		// float left
	// clear both


//------------------
//- Top of the Page
//------------------
#site-title
	// border-top 36px solid Black
	background Black
	// color White
	height 36px
	Width-XS(12)

.site-title
	Width-XS(12)
	Width-SM(6)
	padding-left 0
	padding-right 0
	h1
		display block
	.subtitle
		FiraSans-5(0.75rem, 200, Red, 0.14em, center)
		line-height 0.75rem
		text-transform uppercase
		display block
		left 4px
		padding-top 0
		
nav
	Width-XS(12)
	Width-SM(6)
	background Black
	color White
	ul
		Width-XS(12)
		display table
	li
		text-align center
		display table-cell
	a
		FiraSans-5(1rem, 200, Light, 0.111111em, left)
		text-transform uppercase
		padding 15px	

.logo
	width 4.1666667em
	height 4.1666667em
	// height 5.5833333em
	background Red
	position absolute
	font-size 36px
	left 25%
	
	-webkit-transform translateX(-100%)
	transform translateX(-100%)

	// top -36px
	// left 8.33333%
	h1
		font-size 1em // Standard 48px
		line-height 0.83333em
		position absolute
		left 0.270833em
		bottom 0.6666667em
	.subtitle
		font-size 0.25em // Standard 12px
		position absolute
		left 1.25em
		bottom 1.25em
		color LtRed
		text-transform uppercase
		letter-spacing .1em

.page-header
	background transparent
	// position absolute
	position relative
	// left 8.3%
	padding 15px
	h2
		font-size 3rem











//--------------------
// Bottom of the Page
//--------------------
#site-footer
	background Black
	
	&>*:first-child
		margin 0 auto

	p
		color Gray !important
		text-align center
		padding 50px 12.5%
		font-size 10px
		.updated
			margin-top 10px
			text-align center





//----------------------
//- Reusable Components
//- Should have a matching Jade Mixin
//----------------------
#social-media
	InlineChildren()
	li
		&:first-child a
			padding-left 0
		a
			color Red
			padding 0 20px
			&:hover i
				color Black
			i 
				font-size 1.75em

.skills
	list-style-type none
	.skill
		display inline-block

// Skill Mixin
Skill(backgroundColor, textColor, borderColor)
	background backgroundColor
	padding 0.1em 0.8em
	color textColor
	text-align center
	border-color borderColor
	border-radius 0.1em
	border-width 1px
	cursor default
	letter-spacing 0.05em

.skill
	Skill(transparent, White, Red)
	
.clearfix
	clear both
	
// needs Jade Mixin
.button
	FiraSans-5(1.25rem, 400, Red, auto, center)
	Width-XS(12)
	Width-SM(10)
	Width-MD(8)
	Width-LG(6)
	border 1px solid Red
	display block
	margin-top 10px
	margin-bottom 10px
	text-decoration none
	&:hover
		background Red
		color White
		text-decoration none
