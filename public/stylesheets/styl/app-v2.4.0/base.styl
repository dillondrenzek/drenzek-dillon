	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	margin 0
	padding 0
	
html  
	background url('../images/grassy-field.jpeg') no-repeat center center fixed 
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover



html
	// background url('../images/grassy-field.jpeg') fixed center center
	FiraSans-5(16px, 500, Black, -1px, left)

h1
	FiraSans-5(3rem, 700, White, -0.05em, center)	
	line-height 3rem

h2
	FiraSans-5(2.25rem, 700, Black, -0.05em, left)
	line-height 2.25rem
	
h3
	FiraSans-5(1.75rem, 400, Black, 0em, left)
	line-height 1.5rem

h4
	FiraSans-5(1.25rem, 200, Gray, 0em, left)
		
p
	FiraSans-5(1rem, 200, Black, 0.03125em, justify)
	
