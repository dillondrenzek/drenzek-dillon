// App-Wide Styling
// v3.0.0

@import 'app'

*,
*:before,
*:after
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	margin 0
	padding 0

//- Background Image
html  
	background url('../images/grassy-field.jpeg') no-repeat center center fixed 
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	

//--------------
//- Text Styles
//--------------

html
	FiraSans(16px, 400, Black, -1px, left)
h1
	FiraSans(3rem, 700, White, -0.05em, center)
	line-height 3rem
// h2
// 	FiraSans(2.25rem, 700, Black, -0.05em, left)
// 	line-height 2.25rem
h3
	FiraSans(1.75rem, 400, Black, 0em, left)
	line-height 1.5rem
p
	FiraSans(1rem, 200, Black, 0.03125em, justify)
a
	text-decoration none
	// FiraSans( size, weight, color, spacing, align )
	
img
	&.landscape
		width 100%
		height auto
	&.portrait
		height 100%
		width auto

