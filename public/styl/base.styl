//- Layout (from page top)
//- ! styles may further be modified in inheriting page
#site-title
	Width-XS(12)
	z-index 10
	position fixed
	top 0
	left 0
	height 36px
	
	background black

.logo
	width 130px
	height 174px
	font-size 31.32px
	background Red
	text-align left
	z-index 101
	h1
		position absolute
		left 0.270833em
		bottom 0.6666667em
		font-size 1em // Standard 48px
		line-height 0.83333em
		text-align left
		text-shadow 1px 1px 1px rgba(Black, 0.5)
		NoSelect()
	.subtitle
		position absolute
		left 1.25em
		bottom 1.25em
		font-size 0.25em // Standard 12px
		color LtRed
		text-transform uppercase
		letter-spacing .1em
		text-align left
		NoSelect()
	.login
		position absolute
		top 40px
		left 15px
		font-size 0.25em
		color Red
		text-transform uppercase
		letter-spacing .1em
		cursor pointer
		&:hover
			color LtRed

.logo
	position fixed
	top 0
	left 25%
	-webkit-transform translateX(-140px)
	transform translateX(-140px)

.project
	display inline-block
	margin-bottom 15px
	Width-SM(5)
	
	&:nth-child(odd)
		margin-right 15px

	&>*
		display inline-block
		vertical-align middle
	
	.title
		margin-top 15px
		Width-SM(12)
		h3
			FiraSans(1.25rem, 700, Black, -0.06em, left)
			
	.descriptors
		FiraSans(0.75rem, 700, Red, 0.1em, left)
		text-transform uppercase
		
		.brackets
			color Gray
			font-weight 400

	.points
		FiraSans(0.85rem, 500, Dark, 0.1em, left)
		text-transform uppercase
		.point
			margin-top 10px


	//--------------
	// Image Slider
	//--------------
	figure
		Width-SM(12)
		background Black
		overflow hidden
		height 100%
		position relative
		z-index 0
		cursor pointer
		
		img
			display block
			margin 0 auto
			&:not(a)
				:not(:first-child)
					display none
	
		&:hover a.image
			opacity 1
		
		a.image
			opacity 0
			position absolute
			bottom 0
			text-align center
			width 100%
			background rgba(Red,0.7)
			padding 10px
			color White
			&:hover
				text-decoration none


		&:hover .navigation
			opacity 1

#site-footer
	background black
	position fixed
	z-index 99
	bottom 0
	left 0
	height 36px
	Width-XS(12)
	
	&>*:first-child
		margin 0 auto

	p
		color Gray !important
		text-align center
		padding 50px 12.5%
		font-size 10px
		.updated
			margin-top 10px
			text-align center
		

