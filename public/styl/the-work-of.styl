// The Work of Style
// v3.0

@import 'base'


.page
	padding-bottom 138px
	&>* // Children of .page
		display inline-block
		vertical-align top
		
	section.title
		h2
			Char-PageTitle()
			position absolute
			bottom StandardPadding
			bottom 0
			left StandardPadding
		
		a
			Char-HeaderLinks()
			display block
			// text-align right
			position relative
			top 50%
			-webkit-transform translateY(-100%)
			transform translateY(-100%)
			padding-bottom StandardPadding

	section
		position relative
		padding 0 StandardPadding
		
		&:not(.title)
			padding-bottom ThickPadding
			// border-left 1px solid Gray

		// Debug
		// border 1px solid Red

		
		header
			position relative
			padding StandardPadding 0
			border-top 1px solid Gray

			&>* // Children of .page header
				display inline-block
				
			h3
				Char-SectionTitle(Black)

			.slide-indicator
				Width-MD(4)
				Char-SectionSubtitle()
				position absolute
				right 0
				bottom 0
				-webkit-transform translateY(100%)
				transform translateY(100%)
				// border 1px solid black
				
				&>*
					display inline-block
					// border 1px solid black
					
				.arrow
					text-align center
					cursor pointer
					Width-MD(3)

				.indicator
					text-align center
					Width-MD(6)
				// float left
				// display none
			
			a
				Char-HeaderLinks()
				position absolute
				right 0
	
		
	.left
		Width-XS(2)
		Width-MD(3)
	
	.center
		Width-XS(10)
		Width-MD(6)
		
	.right
		// Offset-XS(2)
		Width-XS(10)
		Width-MD(3)
		
	.featured	
		.project
			Width-MD(12)
			position relative
			margin-bottom 0
			
			&>*
				display inline-block
			figure
				background transparent
				padding-right StandardPadding
				// padding-right StandardPadding
				// margin-right StandardPadding
				Width-MD(8)
			.title
				Width-MD(4)
				.primary
					Char-MediumItemPrimary()
		
	.currently
		Width-MD(12)
		// padding-right 0
		
		
		.project
			display inline-block
			vertical-align top
			margin-right 0
			// padding-top StandardPadding
			// border-top 3px solid Black
			padding-right StandardPadding
			Width-MD(4)
			&:first-child
				padding-left 0
			&:last-child
				// padding-right 0
			
			// margin-right StandardPadding
			margin-bottom ThickPadding
				
			
			&>*
				display block
				Width-MD(12)
				
			figure
				padding-bottom StandardPadding
				background none

			.title
				Char-SmallItemPrimary()
				Width-MD(12)
				margin-top ThinPadding
				padding-bottom StandardPadding
				a
					Char-HeaderLinks()
					font-weight 700
				.primary
					padding-bottom 0
					
				.secondary
					font-weight 400
					// padding-bottom ThinPadding
				.body
					color Black
					// font-weight 400
					// text-align justify
					
					
	.top-skills
		.category
			// padding-top StandardPadding
			padding-left StandardPadding
			margin-bottom StandardPadding
			&:last-child
				margin-bottom 0
			// margin-bottom StandardPadding
			// background Light
			h4
				Char-SectionSubtitle()
				text-transform uppercase
			ul
				padding-left StandardPadding
			.skill
				// background Light
				// padding-left StandardPadding
				padding-bottom (StandardPadding/2)
				
	.recent-skills
		ul
			padding-left StandardPadding
			.skill
				padding-bottom StandardPadding
				
li.skill
	&>*
		display inline-block
		vertical-align middle
	.title
		Char-MediumItemPrimary()
		Width-MD(10)
	.value
		Char-MediumItemValue()
		Width-MD(2)
	
.secondary
	Char-MediumItemSecondary()

.body
	Char-Body()

.selected
	color Red
	font-weight 400

// Forms

FormTransitionTime = .3s

.form-group
	Width-XS(12)
	padding 15px 0
	// background Light
	// border 1px Red solid
	
form
	margin-top 138px
	Width-MD(9)
	text-align left
	position relative
	Offset-XS(3)
	// input:focus
	// 	border 1px solid Red
	
label
	Width-MD(6)
	FiraSans(1rem, 200, Gray, 0.25em, left)
	text-transform uppercase
	transition FormTransitionTime ease all
	// padding-left ThickPadding

input
	font-size 30px
	transition FormTransitionTime ease all
	&:focus
		outline none
		
	&.selected
		color Red
		

		
input[type="text"],
input[type="password"]
	background none
	border none
	border-bottom 1px solid Light
	FiraSans(1.75rem, 700, Black, -0.025em, left)
	FiraSans(1.75rem, 200, Gray, -0.05em, left)
	&:focus
		color Red
		border-bottom 1px solid Red
	
	
input[type="submit"]
	background none
	border none
	text-transform uppercase
	font-size 1rem
	cursor pointer
	FiraSans(1rem, 200, Gray, 0.125em, left)
	&:hover
		color Red
		font-weight 400
	&:active
		box-shadow 1px 1px 1px rgba(Black, 0.5)
		transition none
		background Red
		color White
	


